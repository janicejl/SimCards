<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#002400"
    tools:context="com.example.simcards.CardacopiaInstr">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hunger Activity Instructions"
        android:textColor="#CC9900"
        android:fontFamily="sans-serif-light"
        android:textSize="30sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="

        The object of the game is to discard all of your cards.\n During your turn you through out a single card.
        The rank and suit of the card determine who will go next.\n Clubs, spades, and hearts represent a movement of 1, 2, and 3 units respectively.
        The diamond is different because its value is randomly chosen from values 0, 1, and 2, allowing you the chance to go twice. The rank determines the direction of the movement. If the rank is even the movement goes clockwise, and if it is odd the movement goes counter clockwise.
"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#C0C0C0"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="GoToHungerGains" />

</RelativeLayout>
