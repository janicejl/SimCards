<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#002400"
    tools:context="com.example.simcards.CardacopiaInstr">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cardacopia Instructions"
        android:textColor="#CC9900"
        android:fontFamily="sans-serif-light"
        android:textSize="30sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="\nIn this game, you earn points by beating the card previously played. You can beat this card by playing a card with a higher rank (ace is the lowest, king is the highest), or by playing the suit that beats the previous suit (clubs only beats hearts, hearts only beats spades, spades only beats diamonds, and diamonds only beas clubs).
\nIf you play a higher card, you gain points.\nFor example if you play a 10 over a 4, you get 6 points.
\nIf you play a beating suit, you get 1 point.\nIf you can’t play you’re done.\nPlayer with the highest end score wins"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#C0C0C0"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="GoToUsernameForm" />

</RelativeLayout>
